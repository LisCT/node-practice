extends layout

block content
    section.namecard    
        .namecard-hello 
            if name
                p.namecard-greeting Welcome, #{name}!   
                form.namecard-exit(action='/goodbye', method='post')
                    button(type='submit')
                        img(src="/static/img/close.svg", alt="close-btn")
            else
                p.namecard-greeting Hello, student!
        block intro
    block card
            