extends app

block card
    section(class=`flashcards`) 
        .card(class=`card-${side}`) 
            .card-header
            h1.card-title= side 
            #content
                h2= text 
                if hint
                    p#hint
                        i Hint: #{hint}   
            .card-flip-wrap
                a(href=`${id}?side=${sideToShow}`)
                    img.card-flip(src="/static/img/flip.svg", alt="flip")
            .card-next
                a(href="/cards")
                    img(src="/static/img/next.svg", alt="next")
        script(src="/static/js/app.js")